<% flash.keys.each do |type| %>
  <div data-alert class="flash <%= type %> alert-box radius">
    <%= flash[type] %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>

<h1>Bookmarks</h1>
<ul>
  <% @bookmarks.each do |bookmark| %>
<div class='bookmark'>
  <a href='<%=bookmark.url %>'> <li><%= bookmark.title %></li></a>

  <form action='/bookmarks/<%= bookmark.id%>' method='post'>
    <input id='hidden' type='hidden' name='_method' value='delete'>
    <input type='submit' value='delete'>
  </form>

  <form action="/bookmarks/<%= bookmark.id %>/edit" method="get">
    <input type="submit" value="Update">
  </form>
</div>
  <% end %>
</ul>
<br>

<form action='/bookmarks/add' method='get'>
  <button type="submit" name="submit" value="Add a Bookmark">Add a Bookmark</button>
</form>
